        <Button
            android:id="@+id/btn_demo_volley"
            style="@style/Button.Inactive"
            android:layout_marginTop="10dp"
            android:text="@string/btn_demo_volley" />

        <Button
            android:id="@+id/btn_demo_pagination"
            style="@style/Button.Inactive"
            android:layout_marginTop="10dp"
            android:text="@string/btn_demo_pagination" />

        <Button
            android:id="@+id/btn_demo_networkDetector"
            style="@style/Button.Inactive"
            android:layout_marginTop="10dp"
            android:text="@string/btn_demo_networkDetector" />

        <Button
            android:id="@+id/btn_demo_using"
            style="@style/Button.Inactive"
            android:layout_marginTop="10dp"
            android:text="@string/btn_demo_using" />

        <Button
            android:id="@+id/btn_demo_multicastPlayground"
            style="@style/Button.Inactive"
            android:layout_marginTop="10dp"
            android:text="@string/btn_demo_multicastPlayground" />

